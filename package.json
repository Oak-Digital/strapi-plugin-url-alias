    "@strapi/strapi": "^4.6.0",
    "@types/jest": "^29.4.0",
    "@types/koa": "^2.13.5",
    "@types/styled-components": "^5.1.30",
    "@uncinc/eslint-config": "^1.1.2",
    "codecov": "^3.8.3",
    "jest": "^29.4.1",
    "jest-cli": "^29.2.2",
    "jest-styled-components": "^7.0.2",
    "lerna": "^6.5.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
