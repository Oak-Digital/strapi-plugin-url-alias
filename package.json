{
  "name": "strapi-plugin-webtools",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/addons/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "develop": "turbo run develop",
    "eslint": "turbo run eslint",
    "eslint:fix": "turbo run eslint:fix",
