{
  "name": "strapi-plugin-webtools",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/addons/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "develop": "turbo run develop",
    "lint": "turbo run lint",
    "playground:install": "cd playground && yarn install",
